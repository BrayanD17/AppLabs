<resources>
    <!-- Tema para la ventana de inicio (splash) -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/splashBackground</item>
        <item name="android:navigationBarColor">@color/splashBackground</item>
        <item name="android:windowIsTranslucent">true</item> <!-- Nueva línea -->
    </style>

    <!-- Tema principal de la aplicación -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item> <!-- Fondo blanco o el que prefieras -->
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Estilo para TextView Labels -->
    <style name="TextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextWelcome">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/marineBlue</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textIcon">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/marineBlue</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <!-- Estilo para TextView Titulos -->
    <style name="TextViewStyleTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <!-- Estilo para TextView Titulos -->
    <style name="TextViewStyleDescriptions">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <!-- Estilo para TextView Titulos -->
    <style name="TextViewStyleFilters">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <!-- Estilo para TextView Forms Title -->
    <style name="TextViewStyleFormsTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <!-- Estilo para EditText -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <!-- Estilo para botón con relleno (fondo azul) -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <!-- Estilo para botón sin relleno (solo borde) -->
    <style name="ButtonOutlineStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_outline</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CircleStepStyle">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/circle_unselected</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="CustomMaterialDatePickerTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/softMarineBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/almostBlack</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
    <!-- Botón rojo para eliminar elementos -->
    <style name="ButtonDeleteStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_delete_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- Style for TextView to display information from forms -->
    <style name="viewTextForm" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">15.5sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="viewDataForm" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <!--Style message welcome app student-->
    <style name="welcomeMessageStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">9dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="formMessageStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="messageNotificationStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grayText</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">9dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="withoutMessageStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/marineBlue</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">9dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="formCardStudentActive" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="formNameCardStudentActive" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="formNameCard" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>