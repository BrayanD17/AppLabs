<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="24dp"
    android:paddingTop="48dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgUserStudent"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_user"
        android:contentDescription="@string/defaut_text_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/tvNombreStudent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/defaut_text_user"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/imgUserStudent"
        app:layout_constraintTop_toTopOf="@id/imgUserStudent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvRolUsuarioStudent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/defaut_rol_usuario"
        android:textSize="14sp"
        android:textColor="#888888"
        app:layout_constraintStart_toStartOf="@id/tvNombreStudent"
        app:layout_constraintTop_toBottomOf="@id/tvNombreStudent"
        app:layout_constraintEnd_toEndOf="@id/tvNombreStudent" />
</androidx.constraintlayout.widget.ConstraintLayout>
