<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_message_card"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:elevation="2dp">

    <!-- Título del proceso -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Processo de solicitud"
        android:textColor="#FFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"/>

    <!-- Contenedor para mensaje con icono -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <!-- Icono de mensaje -->
        <ImageView
            android:id="@+id/ivMessageIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/message_icon" />

        <!-- Mensaje principal -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="¡Buenas tardes! Su solicitud para operador durante el 1 Semestre del 2025 ha sido aprobada."
            android:textColor="#FFFF"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Hora y estado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:04"
            android:textColor="#FFFF"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>