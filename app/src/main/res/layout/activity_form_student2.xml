<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/baseActivityColor"
    tools:context=".student.FormActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvIdSchoolNumber"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="left"
                    android:text="@string/idSchoolNumber"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etIdSchoolNumber"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="@string/idSchoolNumberDesc" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/marineBlue"
                    android:padding="15dp"
                    android:text="@string/scheduleAvailability"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="left"
                    android:text="@string/shifts"
                    android:textSize="14sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_corner">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onShiftSelected"
                        android:text="@string/hours1" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onShiftSelected"
                        android:text="@string/hours2" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView7"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/schueduleHours" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:stretchColumns="1,2,3">

                    <!-- Encabezado -->
                    <TableRow
                        android:layout_margin="0dp"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="0dp"
                            android:text="" />

                        <TextView
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="7am a 12" />

                        <TextView
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="12 a 5pm" />

                        <TextView
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="5pm a 10pm" />
                    </TableRow>

                    <!-- Días de la semana -->
                    <!-- Lunes -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Lunes" />

                        <CheckBox
                            android:id="@+id/lunes_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/lunes_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/lunes_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Martes -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Martes" />

                        <CheckBox
                            android:id="@+id/martes_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/martes_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/martes_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Miércoles -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Miércoles" />

                        <CheckBox
                            android:id="@+id/miercoles_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/miercoles_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/miercoles_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Jueves -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Jueves" />

                        <CheckBox
                            android:id="@+id/jueves_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/jueves_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/jueves_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Viernes -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Viernes" />

                        <CheckBox
                            android:id="@+id/viernes_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/viernes_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/viernes_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Sábado -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Sábado" />

                        <CheckBox
                            android:id="@+id/sabado_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/sabado_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/sabado_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Domingo -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Domingo" />

                        <CheckBox
                            android:id="@+id/domingo_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/domingo_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/domingo_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                </TableLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnNext"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="Next"
            android:text="@string/next"
            app:backgroundTint="@color/marineBlue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toBottomOf="@+id/cardView2"
            app:layout_constraintVertical_bias="0.505"
            tools:ignore="OnClick" />

        <Button
        android:id="@+id/btnBack"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="Back"
        android:text="@string/back"
        app:backgroundTint="@color/marineBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="0.505" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


