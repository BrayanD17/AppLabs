<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/principalWhite"
    tools:context=".student.FormActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/Imagen_Formulario" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="229dp"
        android:layout_height="38dp"
        android:text="El siguiente formulario es para todos aquellos estudiantes interesados en obtener una asistencia (Horas Estudiantes - HE)"
        android:textAlignment="center"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="253dp"
        android:layout_height="104dp"
        android:text="El Comité de Becas nos indica que es importante que cada estudiante tenga un respaldo de su participación y consideración para el Programa de Asistencias Estudiantiles (por ejemplo: para efectos de reclamo, en caso de que no se le brindara oportunidad de participar)."
        android:textAlignment="center"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.112" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="254dp"
        android:layout_height="76dp"
        android:text="Para ello, se utiliza la Boleta de Solicitud de Asistencia Estudiantil. Posterior al envío de este formulario, se le solicita que descargue la boleta y la remita a las oficinas de la Carrera de Computación:"
        android:textAlignment="center"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="156dp"
        android:layout_height="35dp"
        android:backgroundTint="@color/white"
        android:text="@string/application_form"
        android:textColor="@color/splashBackground"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="438dp" />


</androidx.constraintlayout.widget.ConstraintLayout>