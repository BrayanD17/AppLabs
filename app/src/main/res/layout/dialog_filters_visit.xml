<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:background="@drawable/rounded_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:text="Filtros"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etCarnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="Número de Carné" />


        <EditText
            android:id="@+id/editFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha (dd-MM-yyyy)"
            android:inputType="date" />


        <Spinner
            android:id="@+id/spinnerLaboratory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="Seleccionar estado" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/btn_reiniciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reiniciar"
                android:layout_marginEnd="10dp"
                android:contentDescription="Botón para reiniciar filtros"
                style="@style/ButtonOutlineStyle" />

            <Button
                android:id="@+id/btn_aplicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplicar"
                style="@style/ButtonStyle"
                android:textSize="14sp"
                android:padding="12dp"
                android:textAllCaps="false"
                android:contentDescription="Botón para aplicar filtros"
                app:backgroundTint="@color/marineBlue"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
