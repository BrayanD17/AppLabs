<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseActivityColor"
    tools:context=".student.EditFormStudent">

    <TextView
        android:id="@+id/nameFormStudentEdit"
        style="@style/TextViewStyleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />


    <ScrollView
        android:layout_width="371dp"
        android:layout_height="691dp"
        android:fillViewport="true"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="44dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título -->

                <!-- Cédula -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Cédula"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etCedula"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edittext_rounded"
                    android:inputType="number"
                    android:padding="12dp" />

                <!-- Promedio ponderado -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Promedio ponderado del semestre anterior"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etPromedio"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edittext_rounded"
                    android:inputType="numberDecimal"
                    android:padding="12dp" />

                <!-- Carrera -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Carrera"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etCarrera"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <!-- Dígitos detrás del carnet -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Dígitos detrás del carnet"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etDigitosCarnet"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edittext_rounded"
                    android:inputType="number"
                    android:padding="12dp" />

                <!-- Turnos -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Turnos"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etTurnos"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <!-- Disponibilidad horaria -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Disponibilidad de horario"
                    android:textSize="16sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="#f9f9f9"
                    android:padding="15dp"
                    android:stretchColumns="1,2,3">

                    <!-- Encabezado -->
                    <TableRow
                        android:layout_margin="0dp"
                        android:paddingVertical="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="0dp"
                            android:text="" />

                        <TextView
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="7am a 12" />

                        <TextView
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="12 a 5pm" />

                        <TextView
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="5pm a 10pm" />
                    </TableRow>

                    <!-- Días de la semana -->
                    <!-- Lunes -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Lunes" />

                        <CheckBox
                            android:id="@+id/lunes_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/lunes_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/lunes_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Martes -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Martes" />

                        <CheckBox
                            android:id="@+id/martes_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/martes_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/martes_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Miércoles -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Miércoles" />

                        <CheckBox
                            android:id="@+id/miercoles_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/miercoles_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/miercoles_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Jueves -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Jueves" />

                        <CheckBox
                            android:id="@+id/jueves_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/jueves_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/jueves_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Viernes -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Viernes" />

                        <CheckBox
                            android:id="@+id/viernes_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/viernes_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/viernes_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Sábado -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Sábado" />

                        <CheckBox
                            android:id="@+id/sabado_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/sabado_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/sabado_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>

                    <!-- Domingo -->
                    <TableRow android:paddingVertical="2dp">

                        <TextView
                            android:gravity="center"
                            android:text="Domingo" />

                        <CheckBox
                            android:id="@+id/domingo_m"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/domingo_t"
                            android:minHeight="0dp"
                            android:padding="0dp" />

                        <CheckBox
                            android:id="@+id/domingo_n"
                            android:minHeight="0dp"
                            android:padding="0dp" />
                    </TableRow>
                </TableLayout>

                <!-- Número de semestres como operador -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Número de semestres como operador"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etSemestresOperador"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edittext_rounded"
                    android:inputType="number"
                    android:padding="12dp" />

                <!-- Nombre del psicólogo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Nombre del psicólogo"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etNombrePsicologo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edittext_rounded"
                    android:padding="12dp" />

                <!-- Boleta de solicitud (PDF) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Boleta de solicitud (PDF)"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/btnUploadPdf"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivPdfIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/upload" />

                    <TextView
                        android:id="@+id/tvPdfInstruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Sube tu documento PDF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvPdfFileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Ningún archivo seleccionado"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Botón Guardar -->
                <Button
                    android:id="@+id/btnGuardar"
                    style="@style/ButtonStyle"
                    android:layout_width="234dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:text="Guardar Cambios"
                    app:backgroundTint="@color/green" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>