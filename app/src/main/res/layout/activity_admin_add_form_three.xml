<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".administrator.AdminAddFormThreeActivity">

    <!-- Barra de progreso -->
    <include
        android:id="@+id/stepIndicator"
        layout="@layout/layout_step_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="273dp"
        android:layout_height="111dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/stepIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo_compulabs" />

    <!-- Requerimientos -->
    <ScrollView
        android:id="@+id/scrollRequerimientos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageView7"
        app:layout_constraintBottom_toTopOf="@id/scrollBeneficios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/etRequerimiento"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribe un requerimiento"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btnAgregarRequerimiento"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Agregar requerimiento"
                app:backgroundTint="@color/marineBlue" />

            <TextView
                style="@style/TextViewStyle"
                android:id="@+id/tvTituloListaRequerimientos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista de requerimientos"
                android:textStyle="bold"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/listaRequerimientos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Beneficios -->
    <ScrollView
        android:id="@+id/scrollBeneficios"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/scrollRequerimientos"
        app:layout_constraintBottom_toTopOf="@id/btnSaveForm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/etBeneficio"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribe un beneficio"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btnAgregarBeneficio"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Agregar beneficio"
                app:backgroundTint="@color/marineBlue" />

            <TextView
                style="@style/TextViewStyle"
                android:id="@+id/tvTituloListaBeneficios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista de beneficios"
                android:textStyle="bold"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/listaBeneficios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

    <!-- BotÃ³n Guardar -->
    <Button
        android:id="@+id/btnSaveForm"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Guardar"
        app:backgroundTint="@color/marineBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
