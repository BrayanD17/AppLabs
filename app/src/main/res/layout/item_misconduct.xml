<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_margin="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameMisconduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Estudiante"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEmailMisconduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="correo@ejemplo.com"
            android:textSize="14sp"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/tvSemesterMisconduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semestre"
            android:textSize="14sp"
            android:textColor="#888888" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:contentDescription="Detalles"
        android:src="@drawable/icon_arrownext" />

</LinearLayout>
